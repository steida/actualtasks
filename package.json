    "tsc": "tsc",
    "build": "wsrun --exclude-missing build",
    "test": "run-s lint tsc build",
    "start": "wsrun start"
  },
  "devDependencies": {
    "babel-plugin-module-resolver": "^3.1.3",
    "rimraf": "^2.6.3",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.1",
    "wsrun": "^3.6.2"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
