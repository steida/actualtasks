{
  "name": "actualtasks",
  "version": "1.0.0",
  "private": true,
  "description": "Local, minimal, key navigable tasks.",
  "repository": "https://github.com/steida/actualtasks.git",
  "author": "Daniel Steigerwald <daniel@steigerwald.cz>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "wsrun dev",
    "deps": "rimraf 'yarn.lock' 'node_modules' '**/node_modules' && yarn",
    "lint": "tslint -p .",
